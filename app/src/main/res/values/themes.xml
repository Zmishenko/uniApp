<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UniApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/uni</item>
        <item name="colorPrimaryVariant">@color/uni</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uni</item>
        <item name="colorSecondaryVariant">@color/uni</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="23">@color/uni</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="Theme.UniApp.NoActionBar" parent="Theme.UniApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UniApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.UniApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>